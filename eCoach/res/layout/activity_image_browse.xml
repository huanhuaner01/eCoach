<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huishen.ecoach.ui.login.ImageBrowseActivity" >

    <RelativeLayout
        android:id="@+id/image_browse_titlebar"
        style="@style/style_common_titlebar" >

        <ImageButton
            style="@style/style_common_title_backbtn"
            android:contentDescription="@null" />

        <TextView
            style="@style/style_common_titletv"
            android:text="@string/title_activity_image_browse" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/image_browse_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/image_browse_titlebar"
        android:contentDescription="@null"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" />

</RelativeLayout>