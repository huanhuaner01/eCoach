<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_calendar_appointlist_content"
    tools:ignore="RtlHardcoded" >

    <TextView
        android:id="@+id/listitem_calendar_tv_stuname"
        style="@style/style_common_wrap_wrap"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_middle"
        android:textColor="@color/color_calendar_student"
        android:textSize="@dimen/txtsize_default" />

    <TextView
        android:id="@+id/listitem_calendar_tv_stuphone"
        style="@style/style_common_wrap_wrap"
        android:layout_centerInParent="true"
        android:textColor="@color/color_calendar_student"
        android:textSize="@dimen/txtsize_default" />

    <ImageButton
        android:id="@+id/lisitem_calendar_imgbtn_call"
        style="@style/style_common_wrap_wrap"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/calendar_appointlist_margin_right"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:padding="@dimen/padding_small"
        android:background="@android:color/transparent"
        android:src="@drawable/icon_calendar_appointlist_call" />

</RelativeLayout>