<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/color_calendar_title_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/calendar_sub_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/calendar_padding_large"
        android:paddingRight="@dimen/calendar_padding_large" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_calendar_sub"
            android:drawableStart="@drawable/icon_calendar_sub"
            android:gravity="center_vertical"
            android:text="@string/sub_title" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_calendar_wegroup_item_line" />

    <ExpandableListView
        android:id="@+id/sub_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="false" />

</LinearLayout>