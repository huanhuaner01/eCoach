<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_all_bkg"
    tools:context=".ui.pcenter.UserGuideActivity" >

    <RelativeLayout
        android:id="@+id/userguide_titlebar"
        style="@style/style_common_titlebar" >

        <ImageButton
            style="@style/style_common_title_backbtn"
            android:contentDescription="@null" />

        <TextView
            style="@style/style_common_titletv"
            android:text="@string/title_activity_user_guide" />
    </RelativeLayout>
    <WebView 
        android:id="@+id/userguide_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/userguide_titlebar"/>
</RelativeLayout>