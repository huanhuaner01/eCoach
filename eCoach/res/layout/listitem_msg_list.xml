<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/style_common_wrap_wrap"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/listitem_msg_tv_title"
            style="@style/style_common_wrap_wrap"
            android:textColor="@color/color_deeper_gray"
            android:textSize="@dimen/txtsize_large" />

        <TextView
            android:id="@+id/listitem_msg_tv_date"
            style="@style/style_common_wrap_wrap"
            android:layout_marginLeft="@dimen/margin_middle"
            android:layout_marginStart="@dimen/margin_middle"
            android:textColor="@color/color_deeper_gray"
            android:textSize="@dimen/txtsize_large" />

        <TextView
            android:id="@+id/listitem_msg_tv_time"
            style="@style/style_common_wrap_wrap"
            android:layout_marginLeft="@dimen/margin_middle"
            android:layout_marginStart="@dimen/margin_middle"
            android:textColor="@color/color_deeper_gray"
            android:textSize="@dimen/txtsize_large" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/listitem_msg_rl_content"
        style="@style/style_common_macth_wrap"
        android:background="@drawable/bkg_msg_content" >

        <TextView
            android:id="@+id/listitem_msg_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_lighter_gray"
            android:textSize="@dimen/txtsize_default" />
    </RelativeLayout>

</LinearLayout>