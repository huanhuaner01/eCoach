<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/padding_large"
    android:paddingBottom="@dimen/padding_large"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/style_common_macth_wrap"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/listitem_order_tv_date"
            style="@style/style_common_wrap_wrap"
            android:gravity="center_vertical"
            android:textColor="@color/color_txt_gray"
            android:textSize="@dimen/txtsize_default" />

        <TextView
            android:id="@+id/listitem_order_tv_time"
            style="@style/style_common_wrap_wrap"
            android:layout_marginLeft="@dimen/margin_large"
            android:gravity="center_vertical"
            android:textColor="@color/color_txt_gray"
            android:textSize="@dimen/txtsize_default"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>

    <TextView
        android:id="@+id/listitem_order_tv_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/padding_small"
        android:gravity="center_vertical"
        android:textColor="@color/color_txt_gray"
        android:textSize="@dimen/txtsize_default" />

    <TextView
        android:id="@+id/listitem_order_tv_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/padding_small"
        android:gravity="center_vertical"
        android:textColor="@color/color_txt_gray"
        android:textSize="@dimen/txtsize_default" />

    <FrameLayout style="@style/style_common_macth_wrap" >

        <RatingBar
            android:id="@+id/listitem_rtb_evaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/listitem_order_tv_cancelled"
            style="@style/style_common_wrap_wrap"
            android:layout_marginLeft="@dimen/margin_large"
            android:gravity="center_vertical"
            android:textColor="@color/color_txt_gray"
            android:textSize="@dimen/txtsize_default"
            tools:ignore="RtlHardcoded" />

    </FrameLayout>

</LinearLayout>