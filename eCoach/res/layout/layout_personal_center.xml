<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imgctrl="http://schemas.android.com/apk/res-auto"  
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkg_personal_center"
     >

    <!-- 使用圆形头像 -->
    <com.huishen.ecoach.widget.RoundImageView
        android:id="@+id/pcenter_avatar"
        android:layout_width="@dimen/pcenter_avatar_width"
        android:layout_height="@dimen/pcenter_avatar_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_launcher"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/pcenter_coachname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pcenter_avatar"
        android:layout_centerHorizontal="true"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="@string/str_pcenter_default_coach_name"
        android:textColor="@color/color_pcenter_textcolor"
        android:textSize="@dimen/txtsize_xlarge" />

    <RatingBar
        android:id="@+id/pcenter_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pcenter_coachname"
        style="@style/style_coach_ratingbar"
        android:layout_centerHorizontal="true"
        android:isIndicator="true"
        android:rating="3.0"
        android:stepSize="1" />

    <ProgressBar
        android:id="@+id/pcenter_scoreprg"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pcenter_rating"
        android:layout_centerHorizontal="true"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:max="100"
        android:progress="0" />

    <TextView
        android:id="@+id/pcenter_scoreup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pcenter_scoreprg"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:textColor="@color/color_pcenter_textcolor"
        android:textSize="@dimen/txtsize_default"
        android:text="@string/str_pcenter_coach_score_level" />

    <LinearLayout 
        android:id="@+id/pcenter_statll_dimen"
        style="@style/style_pcenter_stat_linear"
        android:layout_below="@id/pcenter_scoreup">
        <TextView style="@style/style_pcenter_stattv"
            android:text="@string/str_pcenter_stat_dimen_ordernum"/>
        <TextView style="@style/style_pcenter_stattv"
            android:text="@string/str_pcenter_stat_dimen_praiserates"/>
        <TextView style="@style/style_pcenter_stattv"
            android:text="@string/str_pcenter_stat_dimen_range"/>
        <TextView style="@style/style_pcenter_stattv"
            android:text="@string/str_pcenter_stat_dimen_recommend"/>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/pcenter_statll_value"
        style="@style/style_pcenter_stat_linear"
        android:layout_below="@id/pcenter_statll_dimen">
        <TextView style="@style/style_pcenter_stattv"
            android:text="@string/str_pcenter_stat_default_ordernum"/>
        <TextView style="@style/style_pcenter_stattv"
            android:text="@string/str_pcenter_stat_default_praiserates"/>
        <TextView style="@style/style_pcenter_stattv"
            android:text="@string/str_pcenter_stat_default_range"/>
        <TextView style="@style/style_pcenter_stattv"
            android:text="@string/str_pcenter_stat_default_recommend"/>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/pcenter_menubar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pcenter_statll_value"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <!-- Warning:this layout require picture as same size! -->

        <TextView
            style="@style/style_pcenter_menu_itemtv"
            android:drawableLeft="@drawable/ic_launcher"
            android:drawableStart="@drawable/ic_launcher"
            android:text="@string/str_pcenter_userguide" />

        <TextView
            style="@style/style_pcenter_menu_itemtv"
            android:drawableLeft="@drawable/ic_launcher"
            android:drawableStart="@drawable/ic_launcher"
            android:text="@string/str_pcenter_recommend" />

        <TextView
            style="@style/style_pcenter_menu_itemtv"
            android:drawableLeft="@drawable/ic_launcher"
            android:drawableStart="@drawable/ic_launcher"
            android:text="@string/str_pcenter_setting" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pcenter_menubar"
        android:layout_marginTop="30dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_centerVertical="true"
            android:text="@string/str_pcenter_pushmsg"
            android:textColor="@color/color_titlebar_txt"
            android:textSize="@dimen/txtsize_default" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp" />
    </RelativeLayout>

</RelativeLayout>