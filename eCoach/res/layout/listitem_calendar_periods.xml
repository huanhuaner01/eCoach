<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_calendar_appointlist_content"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/style_common_macth_match"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/listitem_calendar_periodname"
                style="@style/style_common_macth_wrap"
                android:gravity="center_horizontal"
                android:textColor="@color/color_calendar_ampm"
                android:textSize="@dimen/txtsize_default" />

            <TextView
                android:id="@+id/listitem_calendar_perioddesc"
                style="@style/style_common_macth_wrap"
                android:gravity="center_horizontal"
                android:textColor="@color/color_calendar_ampm_desc"
                android:textSize="@dimen/txtsize_default" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_calendar_appoint_divider" />

        <com.huishen.ecoach.widget.NestableListView
            android:id="@+id/listitem_calendar_studentlist"
            style="@style/style_common_macth_wrap"
            android:divider="@color/color_calendar_appoint_divider"
            android:dividerHeight="1dp"
            android:scrollbars="none" >
        </com.huishen.ecoach.widget.NestableListView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_calendar_appoint_divider" />

</LinearLayout>