<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/slide_left_avatar"
        android:layout_width="@dimen/slide_left_avatar_width"
        android:layout_height="@dimen/slide_left_avatar_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/slide_left_coachname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/slide_left_avatar"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/txtsize_xlarge" />

    <RatingBar
        android:id="@+id/slide_left_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/slide_left_coachname"
        style="@style/style_coach_ratingbar"
        android:layout_centerHorizontal="true"
        android:isIndicator="true"
        android:rating="3.0"
        android:stepSize="1" />

    <ProgressBar
        android:id="@+id/slide_left_scoreprg"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/slide_left_rating"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:max="100"
        android:progress="0" />

    <TextView
        android:id="@+id/slide_left_scoreup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/slide_left_scoreprg"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:textColor="@color/color_titlebar_txt"
        android:textSize="@dimen/txtsize_default" />

    <LinearLayout
        android:id="@+id/slide_left_menubar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/slide_left_scoreup"
        android:orientation="vertical" >

        <!-- Warning:this layout require picture as same size! -->

        <TextView
            style="@style/style_slide_left_menu_itemtv"
            android:drawableLeft="@drawable/ic_launcher"
            android:drawableStart="@drawable/ic_launcher"
            android:text="@string/str_slide_leftmenu_userguide" />

        <TextView
            style="@style/style_slide_left_menu_itemtv"
            android:drawableLeft="@drawable/ic_launcher"
            android:drawableStart="@drawable/ic_launcher"
            android:text="@string/str_slide_leftmenu_recommend" />

        <TextView
            style="@style/style_slide_left_menu_itemtv"
            android:drawableLeft="@drawable/ic_launcher"
            android:drawableStart="@drawable/ic_launcher"
            android:text="@string/str_slide_leftmenu_setting" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/slide_left_menubar"
        android:layout_marginTop="40dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:text="@string/str_slide_leftmenu_pushmsg"
            android:textColor="@color/color_titlebar_txt"
            android:textSize="@dimen/txtsize_default" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp" />
    </RelativeLayout>

</RelativeLayout>