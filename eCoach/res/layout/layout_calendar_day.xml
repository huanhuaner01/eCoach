<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/calendar_padding_middle"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textColor="@drawable/sel_calendar_day_txtcolor" />

    <TextView
        android:id="@+id/day"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bkg_calendar_day"
        android:gravity="center"
        android:textColor="@drawable/sel_calendar_day_txtcolor" />

    <TextView
        android:id="@+id/day_bottomtv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/calendar_padding_large"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textSize="@dimen/txtsize_micro" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_calendar_wegroup_item_line" />

</LinearLayout>