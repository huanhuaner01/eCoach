<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="style_common_titlebar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_titlebar_height</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@color/color_titlebar_bkg</item>
    </style>
    <style name="style_common_titletv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/color_titlebar_txt</item>
        <item name="android:textSize">@dimen/txtsize_xlarge</item>
    </style>
    
    <style name="style_common_red_dot">
        <item name="android:layout_width">@dimen/common_reddot_width</item>
        <item name="android:layout_height">@dimen/common_reddot_height</item>
        <item name="android:background">@drawable/bkg_common_reddot</item>
    </style>
    
    <style name="style_slide_left_menu_itemtv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:textColor">@color/color_titlebar_txt</item>
        <item name="android:textSize">@dimen/txtsize_default</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>
    
    <style name="style_coach_ratingbar" parent="@android:style/Widget.RatingBar">
         <item name="android:progressDrawable">@drawable/list_coach_ratingbar</item>  
        <item name="android:minHeight">30dp</item>  
        <item name="android:maxHeight">30dp</item>  
    </style>
    
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

</resources>